<p id="notice"><%= notice %></p>

<h1>Lista de Exposições</h1>

<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <table class="table">
      <thead>
        <tr>
          <th>Cidade</th>
          <th>Datainicio</th>
          <th>Datafim</th>
          <th>Local</th>
          <th colspan="3"></th>
        </tr>
      </thead>
    
      <tbody>
        <% @exhibits.each do |exhibit| %>
          <tr>
            <td><%= exhibit.cidade %></td>
            <td><%= exhibit.datainicio %></td>
            <td><%= exhibit.datafim %></td>
            <td><%= exhibit.local %></td>
            <td><%= link_to 'Show', exhibit %></td>
            <td><%= link_to 'Edit', edit_exhibit_path(exhibit) %></td>
            <td><%= link_to 'Destroy', exhibit, method: :delete, data: { confirm: 'Are you sure?' } %></td>
          </tr>
          <tr>
            <td colspan="7"> <%= link_to 'Subir objeto', new_gabinete_object_path(:exhibit => exhibit), class:'btn btn-primary' %> </td>
          </tr>
          <tr>
            <td colspan="7"> </td>
          </tr>
        <% end %>
      </tbody>
    </table>
    <%= link_to 'Nova exposição', new_exhibit_path, class:'btn btn-success' %>
  </div>
</div>
<br>

<hr>

<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= link_to 'Lista de objetos', gabinete_objects_path, class:'btn btn-info' %>
    <hr>
    <%= link_to 'Lista de imagens', photos_path, class:'btn btn-info' %>
  </div>
</div>



