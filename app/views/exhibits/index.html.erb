<h1>Exposições</h1>

<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <table class="table">
      <thead>
        <tr>
          <th>Cidade</th>
          <th>Datainicio</th>
          <th>Datafim</th>
          <th>Local</th>
        </tr>
      </thead>
    
      <tbody>
        <% @exhibits.each do |exhibit| %>
          <tr>
            <td><%= exhibit.cidade %></td>
            <td><%= exhibit.datainicio %></td>
            <td><%= exhibit.datafim %></td>
            <td><%= exhibit.local %></td>
          </tr>
          <tr>
            <td colspan="4"> <%= link_to 'Ir a exposição', exhibit, class:'btn btn-primary' %> </td>
          </tr>
          <tr>
            <td colspan="4"> </td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>
<br>
