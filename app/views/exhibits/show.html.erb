  <% end %>
</div>
</div>

<div id='comentarios' class='jumbotorn'>
  <h1 class='titulo'>Livro de visitas</h1>
  
  <div class="row">
    <div class="col-md-10 col-md-offset-1">
      <table class="table">
        <thead>
          <tr>
            <th>Comentário</th>
          </tr>
        </thead>
        <tbody>
          <% blankCom = [] %>
          <% soNomeCom = [] %>
          <% @comentarios.each do |comment| %>
            <% if comment.exhibit_id == @exhibit.id %>
              <% if comment.pessoa.blank? %>
                <% blankCom << comment %>
                <% next %>
              <% elsif comment.pessoa !~ /[0-9]/ %>
                <% soNomeCom << comment %>
                <% next %>
              <% end %>
              <tr>
                <td><%= comment.comentario %> <%= comment.pessoa %> </td>
              </tr>
            <% end %>
          <% end %>
          <% soNomeCom.each do |comment| %>
             <tr><td><%= comment.comentario %> <%= comment.pessoa %> </td> </tr>
          <% end %>
          <% blankCom.each do |comment| %>
            <tr><td><%= comment.comentario %> </td> </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
  <br>
</div>


<script src="//blueimp.github.io/Gallery/js/jquery.blueimp-gallery.min.js"></script>
