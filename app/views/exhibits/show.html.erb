<!-- IMAGEM DE INICIO -->
<div id="inicio-pag" class="expo-ini" style="background: url('<%=@imagem_portada.picture.url if !@imagem_portada.nil? %>') no-repeat center center fixed; "> 
  <div class="espaco-imagem"> 
  <h1> </h1>
  </div>
</div>

<!-- INFO DA CIDADE --> 
<div id="cidade" class="about">
  <div class="container">
    <div class="row">
      <div class="col-lg-12 text-center ">
        <h3 class="titulo"> <%= @exhibit.cidade %> </h3>
        <h4> do <%= @exhibit.datainicio %> à <%= @exhibit.datafim %> </h4>
        <h4> <%= @exhibit.local %> </h4>
      </div>
    </div>
    <!-- /.row -->
  </div>
</div>

  <!-- Map -->
<div class="map">
  <iframe width="100%" height="100%" frameborder="0" scrolling="no" marginheight="0" marginwidth="0" src="<%= @exhibit.map %>"></iframe>
    <br />
</div>
<br><br><br>

<!-- TITULO PARA MOSTRA DA EXPOSIÇÃO   -->  
<div id="a-expo" class="about">
  <div class="container">
    <div class="row">
      <div class="col-lg-12 text-center ">
        <h3 class="titulo"> A Exposição </h3>
      </div>
    </div>
    <!-- /.row -->
  </div>

  <!-- carousel ================================================== -->
  <div id="mycarousel" class="carousel slide" data-ride="carousel">
    <!-- indicators -->
    <ol class="carousel-indicators">
      <% @fotos_cidade.count.times do |index| %> 
        <% if index == 0 %>
          <li data-target="#mycarousel" data-slide-to=<%= index %> class='active' ></li>
        <% else %>
          <li data-target="#mycarousel" data-slide-to=<%= index %>> </li>
        <% end %>
      <% end %>
    </ol>
    <div class="carousel-inner" role="listbox">
      <% @fotos_exposicao.each_with_index do |f, index| %>  
        <% if index == 0 %>
          <div class="item active">
        <% else %>
          <div class="item">
        <% end %>
          <%= image_tag f.picture.url %>
        </div>
      <% end %>
    </div>
  </div>
</div>


<!-- GALERIA DE OBJETOS -->
<div id="galeria-obj" class="container">
<div class='jumbotron row'>
  <h2> Objetos e suas histórias </h2>
  <div class="col-md-12 ">
    <% if @gabinete_objects.any? %>
      <%= will_paginate @gabinete_objects,:params => {:anchor => "galeria-objs"}%>
      <ol class="content gabinete-objects">
        <% @gabinete_objects.each do |gabinete_object| %>  
          <% pic = gabinete_object.photos.first.picture if gabinete_object.photos.any?%>
          <% his = gabinete_object.histories.first.frase if gabinete_object.histories.any?%>
          <li id="gabinete_object-<%= gabinete_object.id %>" >
            <div class="row">
              <div class="col-md-8">
                <span class="content">
                  <% if !pic.nil? %>
                    <%= link_to image_tag( pic.url), gabinete_object %>
                  <% end %>
                </span>
              </div>
              <div class="col-md-4">
                <div class="row">
                  <h3> <strong> <%= gabinete_object.nome %> </strong> </h3>
                </div>
                <div class="row">
                  <div class="col-md-12 centered">
                    <h4> <%= gabinete_object.pessoa %> |
                    <%= gabinete_object.idade %> </h4>
                  </div>
                </div>
                <div class="row">
                  <div class="col-md-12 centered">
                    <p class="his-preview"> <i> <%= his if !his.nil? %></i> </p>
                  <%= link_to 'História', gabinete_object, class:'btn btn-default' %>
                  </div>
                </div>
              </div>
            </div>
          </li>
        <% end %>
      </ol>
      <%= will_paginate @gabinete_objects,:params => {:anchor => "galeria-objs"} %>
    <% end %>
  </div>
</div>
</div>

<!-- The Bootstrap Image Gallery lightbox, should be a child element of the document body -->
<div id="expo-gallery" class="container">
<div class='jumbotron row'>
  <h2>Galeria de imagens</h2>
  <br>
  <div id="blueimp-gallery" class="blueimp-gallery">
    <!-- The container for the modal slides -->
    <div class="slides"></div>
    <!-- Controls for the borderless lightbox -->
    <h3 class="title"></h3>
    <a class="prev">‹</a>
    <a class="next">›</a>
    <a class="close">×</a>
    <a class="play-pause"></a>
    <ol class="indicator"></ol>
    <!-- The modal dialog, which will be used to wrap the lightbox content -->
    <div class="modal fade">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <button type="button" class="close" aria-hidden="true">&times;</button>
                    <h4 class="modal-title"></h4>
                </div>
                <div class="modal-body next"></div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-default pull-left prev">
                        <i class="glyphicon glyphicon-chevron-left"></i>
                        Previous
                    </button>
                    <button type="button" class="btn btn-primary next">
                        Next
                        <i class="glyphicon glyphicon-chevron-right"></i>
                    </button>
                </div>
            </div>
        </div>
    </div>
</div>

<div id="links">
  <% @fotos_montagem.each do |f| %>
