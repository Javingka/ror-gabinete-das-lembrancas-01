<p id="notice"><%= notice %></p>

<h1>Lista de Comentarios</h1>

<div class="row">
  <div class="col-md-8 col-md-offset-2">
    <table class="table">
      <thead>
        <tr>
          <th>Comentario</th>
          <th>Pessoa</th>
          <th> <%= link_to 'ExposiÃ§oes', creation_exhibits_path, class: 'btn btn-default' %></th>
        </tr>
      </thead>
    
      <tbody>
        <% @comments.each do |comment| %>
          <% exh = Exhibit.find_by(id: comment.exhibit_id) %>
          <tr>
            <td><%= comment.comentario %></td>
            <td><%= comment.pessoa %></td>
            <td><%= link_to_if !exh.nil?, exh.cidade, exhibit_path(exh) , class: 'btn btn-link'%> </td>
            <td><%= link_to 'Show', comment %></td>
            <td><%= link_to 'Edit', edit_comment_path(comment) %></td>
            <td><%= link_to 'Destroy', comment, method: :delete, data: { confirm: 'Tem certeza?' } %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>

