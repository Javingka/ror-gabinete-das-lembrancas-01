<header class="navbar navbar-fixed-top " style='border-bottom: 2px solid #000'>
  <div class="container">
    <% logo = image_tag("mono_web.png", :alt => "infinitos monos", :class => "logo", size:'80x52') %>
  	<%= link_to logo, root_path , id: "logo" %>
    <nav>
      <ul class="nav navbar-nav navbar-left">
        <li><%= link_to "Inicio",  root_path , class:"page-scroll", method: :get%></li>
        <li><%= link_to "O projeto", '#projeto', class:"page-scroll" %></li>
        <li><%= link_to "Infinitos Monos",  '#infinitos-monos' , class:"page-scroll"%></li>

        <li class="dropdown">
          <a href="#" class="dropdown-toogle" data-toggle="dropdown">
            Exposições<b class="caret"></b>
          </a>
          <ul class="dropdown-menu">
            <% exps = get_exposicoes %>
            <% exps.each do |exhibit| %>
              <li>  <%= link_to exhibit.cidade, exhibit_path(exhibit)+'#inicio-pag', method: 'get' %> </li>
            <% end %>
          </ul>
        </li>
      </ul>
      <% if !get_actual_exp.nil? %>
       <ul class="nav  navbar-nav navbar-right">
          <li> <%= link_to 'A cidade', '#cidade', class:"page-scroll"%> </li>
          <li> <%= link_to 'A exposição' ,'#a-expo', class:"page-scroll"%> </li>
          <li> <%= link_to 'A coleção' ,'#galeria-obj', class:"page-scroll"%> </li>
          <li> <%= link_to 'Imagens' ,'#expo-gallery', class:"page-scroll"%> </li>
          <li> <%= link_to 'Livro de visitas' ,'#comentarios', class:"page-scroll"%> </li>
       </ul>
      <% end %>
      <% if !get_actual_obj.nil? %>
       <ul class="nav  navbar-nav navbar-right">
         <li> <%= link_to 'Voltar à exposição ', exhibit_path(@exp_obj)+'#galeria-obj',  class:"page-scroll", method: 'get'%> </li>
          <li> <%= link_to 'A historia', '#lembranca', class:"page-scroll"%> </li>
          <li> <%= link_to 'Imagens' ,'#imagen-obj', class:"page-scroll"%> </li>       
          <li> <%= link_to 'Próximo objeto', gabinete_object_path(@obj_n), method: 'get' %> </li> 

          <li class="dropdown">
            <a href="#" class="dropdown-toogle" data-toggle="dropdown">
             Objetos <b class="caret"></b>
            </a>
            <ul class="dropdown-menu">
              <% objs = @exp_obj.gabinete_objects.all %>
              <% objs.each do |o| %>
                <li>  <%= link_to o.nome, o, method: 'get' %> </li>
              <% end %>
            </ul>
          </li>

       </ul>
      <% end %>
    </nav>
  </div>
</header>
