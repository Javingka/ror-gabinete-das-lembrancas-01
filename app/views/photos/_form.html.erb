<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_for(@photo, html: { multipart: true }) do |f| %>
      <% if @photo.errors.any? %>
        <div id="error_explanation">
          <h2><%= pluralize(@photo.errors.count, "error") %> prohibited this photo from being saved:</h2>
    
          <ul>
          <% @photo.errors.full_messages.each do |message| %>
            <li><%= message %></li>
          <% end %>
          </ul>
        </div>
      <% end %>
    
      <span class="picture">
        <%= f.file_field :picture, accept: 'image/jpg,image/jpeg,image/gif,image/png' %>
      </span>

  <div class="checkbox">
      <% if !@exhibit.nil? %>
        <%= f.label :ecapa do %>
          <%= f.check_box :ecapa %> Check se é a imagem capa da residencia 
        <% end %> <br>
        <%= f.label :montagem do %>
          <%= f.check_box :montagem %> Check se é imagem da montagem 
        <% end %> <br>
        <%= f.label :expo do %>
          <%= f.check_box :expo %> Check se é imagem da exposição
        <% end %> <br>
        <%= f.label :cidade do %>
          <%= f.check_box :cidade %> Check se é imagem da cidade
        <% end %> <br>
        <%= f.label :natureza do %>
          <%= f.check_box :natureza %> Check se é imagem de natureza
        <% end %>
      <% end %>
  </div>
  <hr>

  <div class="checkbox">
      <% if !@objeto.nil? %>
        <%= f.label :ocapa do %>
          <%= f.check_box :ocapa %> Check se é a imagem da capa do objeto?
        <% end %>
      <% end %>
    </div>

      <%= f.hidden_field :gabinete_object_id, :value => @objeto.id if !@objeto.nil? %>
      <%= f.hidden_field :exhibit_id        , :value => @exhibit.id if !@exhibit.nil? %>

      <div class="field">
      </div>
      <div class="actions">
        <%= f.submit class: 'btn btn-primary' %>
      </div>
    <% end %>
  </div>
</div>


<script type="text/javascript">
  $('#photo_picture').bind('change', function() {
    var size_in_megabytes = this.files[0].size/1024/1024;
    if (size_in_megabytes > 5) {
      alert('Oi mono!!.. O que foi??  ...O tamanho máximo para o arquivo é de 5MB. Escolhe um menor e vai pular nos galhos');
    }
  });
</script>
